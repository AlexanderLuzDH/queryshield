<idea-plugin>
  <id>io.queryshield</id>
  <name>QueryShield</name>
  <version>0.2.0-rc</version>
  <vendor email="dev@queryshield.local" url="https://example.com">QueryShield</vendor>
  <depends>com.intellij.modules.python</depends>
  <depends optional="true">com.intellij.modules.json</depends>
  <description>Agent-grade ORM/SQL performance budgets for Django, right in PyCharm.</description>
  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="QueryShield" factoryClass="io.queryshield.ToolWindowFactory" anchor="bottom"/>
    <inlayProvider language="Python" implementationClass="io.queryshield.InlayProvider"/>
    <projectConfigurable instance="io.queryshield.SettingsConfigurable" id="io.queryshield.settings" displayName="QueryShield"/>
  </extensions>
  <actions>
    <action id="io.queryshield.RunAnalysisAction" class="io.queryshield.RunAnalysisAction" text="Analyze with QueryShield"/>
  </actions>
</idea-plugin>
